<div class="container">
  <div class="form-align">
    <div class="form-group">
      <h4>Change Password</h4>
    </div>

    <%= form_with url: pwupdate_user_path, method: :patch, local: true do |f| %>

      <div class="form-group">
        <% if @user.errors.any? %>
          <p>
            <%= @user.errors.full_messages.join(", ") %>
          </p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <br>
        <%= f.password_field :current_password, size: "85", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :new_password %> <br>
        <%= f.password_field :new_password, size: "85", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :new_password_confirmation %> <br>
        <%= f.password_field :new_password_confirmation, size: "85", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit New Password", class: "btn btn-outline-primary", data: { confirm: "Are You Sure?" } %>
      </div>

    <% end %>
  </div>
</div>
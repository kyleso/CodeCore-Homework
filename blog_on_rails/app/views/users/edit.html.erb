<div class="container">
  <div class="form-align">
    <div class="form-group">
      <h4>Edit User Info</h4>
    </div>

    <%= form_with model: @user, local: true do |f| %>

      <div class="form-group">
        <% if @user.errors.any? %>
          <p>
            <%= @user.errors.full_messages.join(", ") %>
          </p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :name %> <br>
        <%= f.text_field :name, size: "85", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %> <br>
        <%= f.email_field :email, size: "85", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit Changes", class: "btn btn-outline-primary", data: { confirm: "Are You Sure?" } %>
      </div>

    <% end %>
  </div>
</div>
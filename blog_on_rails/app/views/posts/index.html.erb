<div class="container-fluid index-box">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="card-deck col-lg-4 col-md-6 col-sm-12">
        <div class="card border-secondary mb-3">
          <div class="card-body">
            <h5 class="card-title text-primary"><%= link_to post.title, post_path(post.id) %></h5>
            <p class="card-text"><%= post.body %></p>
            <div class="card-footer bg-transparent foot">
              <small class="text-muted">
              Posted by <span class="text-primary"><%= post.user&.name || '--deleted--' %></span>
              <%= time_ago_in_words(post.created_at) %> ago
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
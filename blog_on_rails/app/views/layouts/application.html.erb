<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  
  <body>
    <header>
      <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <a class="navbar-brand text-primary" href="/">Blog On Rails</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="nav-container">
              <a class="nav-item nav-link active form-inline" href="/">Home <span class="sr-only">(current)</span></a>
              <a class="nav-item nav-link form-inline" href="/posts/new">New Post</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main> 
  </body>
</html>

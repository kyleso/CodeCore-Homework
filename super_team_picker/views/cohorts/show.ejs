
<%- include('../partials/header') %>
<div class="post-cards">
  <div class="card mb-4">
    <div class="card-body">
      <h1><%= cohort.name %></h1>
      <p><%= cohort.members %></p>
        <div class="button-container">
          <a class="btn btn-success" role="button" href="/cohorts/<%= cohort.id %>/edit">Edit</a>
          <form method="POST" action="/cohorts/<%= cohort.id %>">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger" value="Delete">
          </form>
        </div>

        <form>
          <div class="form-spacing">
            <h4>Method</h4>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="pickMethod" id="teamCount" value="teamCount" checked>
                <label class="form-check-label" for="teamCount">
                  Team Count
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="pickMethod" id="numberPerTeam" value="numberPerTeam">
                  <label class="form-check-label" for="numberPerTeam">
                    Number Per Team
                  </label>
              </div> 
          </div>
          <div class="form-spacing">
            <h4>Quantity</h4>
              <input type="text" class="form-control" name="quantity">
          </div>
          <div class="big-button">
            <input type="submit" class="btn btn-outline-primary" value="Assign Teams">
          </div>
          
        </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>